<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar nueva promocion</h4>
            <form action="/admin/precios/agregar" method="post"
            enctype="multipart/form-data">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Comida" name="comida">
                </div>
                 <div class="form-group">
                <input type="text" class="form-control" placeholder="Acompanamiento" name="acompanamiento">
                </div>
                 <div class="form-group">
                <input type="text" class="form-control" placeholder="Precio" name="precio">
                </div>
                <div class="form-group">
                    <label>Imagen: <input type="file" class="form-control"
                    name="imagen" id="imagen" /></label>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>