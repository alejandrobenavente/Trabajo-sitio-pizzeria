<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la promocion</h4>
            <form action="/admin/precios/modificar" method="post"
            enctype="multipart/form-data">
                <input type="hidden" value="{{promocion.id}}" name="id">
                <div class="form-group">
                    <label for="">Comida</label>
                    <input type="text" class="form-control" name="comida" value="{{promocion.comida}}">
                </div>
                <div class="form-group">
                    <label for="">Acompa√±amiento</label>
                    <input type="text" class="form-control" name="acompanamiento" value="{{promocion.acompanamiento}}">
                </div>
                <div class="form-group">
                    <label for="">Precio</label>
                    <input type="text" class="form-control" name="precio" value="{{promocion.precio}}">
                </div>
                <div class="form-group">
                    <p>
                        <label>Imagen: <input type="file" name="imagen"
                        id="imagen"></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete"
                        id="img_delete" value="1">
                        Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{promocion.img_id}}">
                    </p>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>